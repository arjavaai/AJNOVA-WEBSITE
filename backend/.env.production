# AJ NOVA Backend - Production Environment Variables
# Copy this file to .env and fill in the actual values

# Environment
ENVIRONMENT=production
DEBUG=False

# API Configuration
# Update after Railway deployment
BACKEND_URL=https://your-app.up.railway.app
FRONTEND_URL=https://ajnova.vercel.app

# Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS (comma-separated list)
# Update with your actual frontend URLs
CORS_ORIGINS_STR=https://ajnova.vercel.app,https://www.ajnova.com

# Supabase Configuration
# Get from: https://supabase.com/dashboard/project/jvssfdlouhwxioahvame/settings/api
SUPABASE_URL=https://jvssfdlouhwxioahvame.supabase.co
SUPABASE_KEY=YOUR_ANON_KEY_HERE
SUPABASE_SERVICE_KEY=YOUR_SERVICE_ROLE_KEY_HERE

# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=YOUR_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_CLIENT_SECRET_HERE
# Update after Railway deployment
GOOGLE_REDIRECT_URI=https://your-app.up.railway.app/api/v1/auth/google/callback

# Google Gemini AI
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE
GEMINI_MODEL=gemini-1.5-pro

# SendGrid Email Service
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY_HERE
FROM_EMAIL=noreply@ajnova.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# File Upload Settings
MAX_FILE_SIZE=10485760
